@page "/dashboard"

<RadzenCard>
    <RadzenHeading Size="H1">Dashboard</RadzenHeading>
    <RadzenGrid Data="@orders" TItem="Order" AutoGenerateColumns="false">
        <Columns>
            <RadzenGridColumn TItem="Order" Property="OrderID" Title="ID" />
            <RadzenGridColumn TItem="Order" Property="CustomerName" Title="Customer" />
            <RadzenGridColumn TItem="Order" Property="OrderDate" Title="Date" />
            <RadzenGridColumn TItem="Order" Property="Total" Title="Total" />
        </Columns>
    </RadzenGrid>
</RadzenCard>

@code {
    // Ejemplo de datos para el grid, reemplaza con tus propios datos y lógica de carga
    private List<Order> orders = new List<Order>
    {
        new Order { OrderID = 1, CustomerName = "John Doe", OrderDate = DateTime.Now, Total = 100 },
        new Order { OrderID = 2, CustomerName = "Jane Smith", OrderDate = DateTime.Now.AddDays(-1), Total = 150 },
        // ... más órdenes
    };

    public class Order
    {
        public int OrderID { get; set; }
        public string CustomerName { get; set; }
        public DateTime OrderDate { get; set; }
        public decimal Total { get; set; }
    }
}
