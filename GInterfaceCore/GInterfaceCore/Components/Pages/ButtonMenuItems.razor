@rendermode InteractiveServer

<RadzenPanelMenu>

    
        
    
        <RadzenPanelMenuItem Text="Home" Icon="home" Click=@(args => HandleMenu(MenuItems.Home)) />    
        <RadzenPanelMenuItem Text="Manejo de Documentos" Icon="account_box" Click=@(args => HandleMenu(MenuItems.Documentos)) />
        <RadzenPanelMenuItem Text="Configuracion" Icon="account_box" Click=@(args => HandleMenu(MenuItems.Config)) />
        <RadzenPanelMenuItem Text="Registrar" Icon="account_box" Click=@(args => HandleMenu(MenuItems.Registrar)) />
       
    

</RadzenPanelMenu>
@code {
    //Get Global Core Settings
    private Core.AppCore _appCore = Core.AppCore.Instance;


    private void HandleMenu(MenuItems _menu)
    {
        switch (_menu)
        {
            case MenuItems.Home:
                Navigation.NavigateTo("/");
                break;
            case MenuItems.Documentos:
                Navigation.NavigateTo("/workspace");
                break;
            case MenuItems.Config:
                Navigation.NavigateTo("/config");
                break;
            case MenuItems.Registrar:
                Navigation.NavigateTo("/test");
                break;
            default:
                break;
        }
        //_appCore._navigationManager.NavigateTo("/");  // Navegación interna en Blazor
    }
}
