@rendermode InteractiveServer

<RadzenPanelMenu>
    <RadzenPanelMenuItem Text="Home" Icon="home" Click=@(args => HandleMenu(MenuItems.Home)) />
    <RadzenPanelMenuItem Text="Manejo de Documentos" Icon="account_box" Click=@(args => HandleMenu(MenuItems.Documentos)) />
    <RadzenPanelMenuItem Text="Login" Icon="account_box" Click=@(args => HandleMenu(MenuItems.Login)) />
    <RadzenButton Variant="Variant.Text" Click=@(args => HandleMenu(MenuItems.Login)) Text="Login" ButtonStyle="ButtonStyle.Base" />

</RadzenPanelMenu>
@code {
    //Get Global Core Settings
    private Core.AppCore _appCore = Core.AppCore.Instance;

    private void HandleMenu(MenuItems _menu)
    {
        switch (_menu)
        {
            case MenuItems.Login:
                Navigation.NavigateTo("/login");  // Navegación interna en Blazor
                break;
            case MenuItems.Documentos:
                Navigation.NavigateTo("/workspace");  // Navegación interna en Blazor
                break;                
            default:
                break;
        }
        //_appCore._navigationManager.NavigateTo(_menu);  // Navegación interna en Blazor
    }
}
