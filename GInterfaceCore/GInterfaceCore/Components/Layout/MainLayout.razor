<RadzenLayout Style="grid-template-columns: auto 1fr auto; grid-template-areas: 'rz-header rz-header rz-header' 'rz-sidebar rz-body rz-right-sidebar'">
    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">            
            <RadzenLabel Text="Header" />
            <RadzenButton Variant="Variant.Text" Click=Onclick Text="Salir" ButtonStyle="ButtonStyle.Base" />
        </RadzenStack>
    </RadzenHeader>
    <RadzenSidebar>
        <ButtonMenuItems></ButtonMenuItems>
        <div class="rz-p-4">
            Left Sidebar
        </div>
    </RadzenSidebar>
    <RadzenBody>
        <div class="rz-p-4">
            @Body
        </div>        
    </RadzenBody>    
</RadzenLayout>

@code {

    private void Onclick()
    {
        Navigation.NavigateTo("/login/true");
    }
}